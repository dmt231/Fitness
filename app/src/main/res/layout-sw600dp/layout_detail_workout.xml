<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/linearLayoutMain"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0DFDF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:backgroundTint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chi_ti_t_bu_i_t_p"
            android:fontFamily="@font/nunito_bold"
            android:textSize="@dimen/_14ssp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/nameWorkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK AND CARDIO"
                android:fontFamily="@font/helvetica_rounded_bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_15ssp"/>
           <LinearLayout
               android:id="@+id/linearLayoutDetailInfo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_15sdp"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="@dimen/_22sdp"
                   android:layout_height="@dimen/_22sdp"
                   android:background="@drawable/time"
                   android:layout_marginStart="@dimen/_10sdp"/>
               <TextView
                   android:id="@+id/timeTxt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif-medium"
                   android:textColor="#403F3F"
                   android:textSize="@dimen/_9ssp"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:layout_gravity="center_vertical"/>
               <ImageView
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/speedometer"
                   android:layout_marginStart="@dimen/_15sdp"/>
               <TextView
                   android:id="@+id/level"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif-medium"
                   android:textColor="#403F3F"
                   android:textSize="@dimen/_9ssp"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:layout_gravity="center_vertical"/>
               <ImageView
                   android:layout_width="@dimen/_18sdp"
                   android:layout_height="@dimen/_18sdp"
                   android:background="@drawable/kettlebell"
                   android:layout_marginTop="@dimen/_2sdp"
                   android:layout_marginStart="@dimen/_15sdp"/>
               <TextView
                   android:id="@+id/type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="sans-serif-medium"
                   android:textColor="#403F3F"
                   android:textSize="@dimen/_9ssp"
                   android:layout_marginStart="@dimen/_10sdp"
                   android:layout_gravity="center_vertical"/>
           </LinearLayout>
            <TextView
                android:id="@+id/overView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Quan"
                android:fontFamily="@font/helvetica_rounded_bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_13ssp"/>
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buổi tập boxing sẽ giúp chúng ta học cách tự vệ, xả stress, giảm mệt mỏi, tăng tính linh hoạt, dẻo dai của cơ bắp đặc biệt là vùng thân trên, đồng thời giúp đốt cháy calonhằm giảm mỡ hiệu quả, cải thiện lực đấm."
                android:fontFamily="sans-serif-medium"
                android:textColor="#403F3F"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:id="@+id/descriptionEquipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dụng Cụ"
                android:fontFamily="@font/helvetica_rounded_bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_13ssp"/>
            <TextView
                android:id="@+id/txtEquipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Tạ Đơn, Tạ Đòn"
                android:textColor="#403F3F"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các Bài Tập"
                android:fontFamily="@font/helvetica_rounded_bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_13ssp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewListExercise"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layoutRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/loop"/>
                <TextView
                    android:id="@+id/numberRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <Button
                android:id="@+id/btnStartWorkout"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/background_button_get_started"
                android:text="@string/txtGetStarted"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica_bold"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>