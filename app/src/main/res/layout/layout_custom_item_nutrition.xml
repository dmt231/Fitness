<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/linearLayoutCustomItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/images_nutrition"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameNutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/helvetica_rounded_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/labelKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="@string/kcal"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/valueKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/labelKcal"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#4D4C4C"
                    android:text="140"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/labelProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="@string/protein"
                    android:layout_alignStart="@id/valueKcal"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/valueProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/labelProtein"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#4D4C4C"
                    android:text="140"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/labelCab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="@string/cab"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/valueCab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/labelCab"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#4D4C4C"
                    android:text="140"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/labelFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="@string/fat"
                    android:layout_alignStart="@id/valueCab"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/valueFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/labelFat"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#4D4C4C"
                    android:text="140"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>