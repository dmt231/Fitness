<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D9D8D8">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <ProgressBar
        android:id="@+id/progressCountDown"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:max="10"
        android:progress="10"
        android:rotation="-90"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:background="@drawable/progress_bar_count_down_gray_color"
        android:progressDrawable="@drawable/progress_bar_count_down_blue_color"
        />
    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_rounded_bold"
        android:textSize="@dimen/_25ssp"
        android:textColor="@color/theme_background_color"
        android:layout_gravity="center"
        android:text="00:30"/>
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_button_get_started"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_270sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_12ssp" />
</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>